generator client {
  provider = "prisma-client-js"
  // Добавляем поддержку Alpine Linux (linux-musl) и локальной системы для работы Docker
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  telegramId   BigInt        @unique
  firstName    String?
  username     String?
  currency     String        @default("UZS") // UZS, KZT, RUB, USD
  createdAt    DateTime      @default(now())
  transactions Transaction[]
  budgets      Budget[]
  debts        Debt[]
}

model Transaction {
  id          Int      @id @default(autoincrement())
  amount      Float
  currency    String
  category    String
  type        String   // expense, income
  description String?
  date        DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}

model Budget {
  id       Int    @id @default(autoincrement())
  category String
  limit    Float
  spent    Float  @default(0)
  currency String
  userId   Int
  user     User   @relation(fields: [userId], references: [id])
}

model Debt {
  id          Int       @id @default(autoincrement())
  personName  String
  amount      Float
  currency    String
  type        String    // lent (дал в долг), borrowed (взял в долг)
  dueDate     DateTime?
  isPaid      Boolean   @default(false)
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
}